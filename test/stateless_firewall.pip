(pip
  (table tcp_filter exact
    (actions
      (copy
        (named_field tcp.src)
	(offset key (int i32 0) (int i32 16)) ; context[key] = Ï€[tcp.src])
	(int i32 16))
      (match)
    ) ; actions
    (rules
      (rule (int i32 80)
        (actions (output (port (named_field tcp.dst))))) ; if tcp.src == 80 (HTTP): forward the packet
      (rule (int i32 444)
        (actions (output (port (named_field tcp.dst))))) ; if tcp.src == 443 (HTTPS): forward the packet
      (rule (miss)
	(actions drop))
      ) ; rules
  ) ; tcp_filter
) ; pip

     
